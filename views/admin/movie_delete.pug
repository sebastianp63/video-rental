extends ./../layouts/admin.pug

block content
    h1 Delete Movie: #{movie.title}

    if rentals 
        p.font-weight-bold This movie in rented

        each rental in rentals 
            .card(style="margin-bottom: 10px")
                .card-body

    else 
        p Do you want to delete this Movie?
        form(action="" method="POST")
            .form-group
                input(type="hidden" name="id" requires="true" value=movie._id)
            button(class="btn btn-primary" type="submit") Delete
        