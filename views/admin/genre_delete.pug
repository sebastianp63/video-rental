extends  ./../layouts/admin.pug

block content
    h1 Delete Genre: #{genre.name}

    if movies.length
        p.font-weight-bold Delete the following movies before attempting to delete this genre 

        each movie in movies 
            .card(style="margin-bottom: 10px")
                .card-body 
                    h5.card-title Movie #{movie.title}
                    a(href=movie.url + "/details" class="btn btn-primary btn-sm") Details
                    a(href=movie.url + "/delete" class="btn btn-success btn-sm") Delete
    else 
        p Do you want to delete this Genre?
        form(action="" method="POST")
            .form-group
                input(type="hidden" name="id" requires="true" value=genre._id)
            button(class="btn btn-primary" type="submit") Delete 

                